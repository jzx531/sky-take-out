<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">

    <!--    保存套餐和菜品的关联关系-->
    <insert id="insertBatch" useGeneratedKeys="true" keyProperty="id">
        insert into setmeal_dish (setmeal_id, dish_id, name, price, copies) VALUES
        <foreach collection="setmealDishes" separator="," item="item">
            (#{item.setmealId},#{item.dishId},#{item.name},#{item.price},#{item.copies})
        </foreach>
    </insert>

<!--    删除套餐中餐品的对应数据-->
    <delete id="deleteBySetmealId">
            delete from setmeal_dish where setmeal_id = #{setmealId}
    </delete>

<!--判断当前菜品类是否被套餐关联了-->
<!--    resultType 指定的是单条记录的类型，不是整个返回值的类型-->
    <select id="getSetmealIdsByDishIds" resultType="java.lang.Long">
            select setmeal_id from setmeal_dish where dish_id in
            <foreach collection="dishIds" separator="," item="item" open="(" close=")">
                #{item}
            </foreach>
    </select>

<!--    根据套餐信息查询菜品信息-->
    <select id="getDishBySetmealId" resultType="com.sky.entity.SetmealDish">
        select * from setmeal_dish where setmeal_id = #{setmealId}
    </select>


</mapper>